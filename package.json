{
  "name": "vidagame",
  "version": "0.1.20",
  "description": "pantiplay game launcher",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder",
    "start": "electron ."
  },
  "author": "pantigame",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.1.2",
    "electron-builder": "^24.13.3",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "7zip-min-electron": "^1.4.4",
    "axios": "^1.6.3",
    "cookie": "^0.6.0",
    "crypto": "^1.0.1",
    "discord-webhook-node": "^1.1.8",
    "dotenv": "^16.4.7",
    "electron-fetch": "^1.9.1",
    "electron-log": "^5.1.2",
    "electron-progressbar-customhtml": "^1.1.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.8",
    "electron-window-state": "^5.0.3",
    "fetch-retry": "^6.0.0",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.2.0",
    "network": "^0.7.0",
    "node-downloader-helper": "^2.1.9",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-secure-storage": "^1.3.2",
    "secure-electron-store": "^4.0.2",
    "sudo-prompt": "^9.2.1"
  },
  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "http://updater.vidagame.ir:8080/"
      }
    ],
    "appId": "com.vidagame.ir.pantigame",
    "mac": {
      "category": "launcher.app.game.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "nsis": {
      "perMachine": true
    },
    "win": {
      "icon": "./resources/icons/icon.ico"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  }
}
